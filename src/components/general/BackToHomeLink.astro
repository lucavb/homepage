---
export interface Props {
    text?: string;
    href?: string;
}

const { text = 'Back to Home', href = '/' } = Astro.props;
---

<div class="absolute top-6 left-0 right-0 z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <a
            href={href}
            class="py-2 inline-flex items-center text-slate-700 dark:text-white/90 hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="mr-2"
                aria-hidden="true"
            >
                <path d="m12 19-7-7 7-7"></path>
                <path d="M19 12H5"></path>
            </svg>
            {text}
        </a>
    </div>
</div>
