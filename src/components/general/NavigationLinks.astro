---
interface Props {
    isHomePage?: boolean;
    variant?: 'desktop' | 'mobile';
    class?: string;
}

const { isHomePage = true, variant = 'desktop', class: className = '' } = Astro.props;

const baseClasses =
    variant === 'desktop'
        ? 'text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors'
        : 'mobile-nav-link block px-4 py-3 text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-gray-50 dark:hover:bg-gray-800 rounded-lg transition-colors';

const containerClasses =
    variant === 'desktop' ? `hidden md:flex space-x-8 ${className}` : `flex-1 px-4 py-6 space-y-4 ${className}`;
---

{
    variant === 'desktop' ? (
        <nav class={containerClasses}>
            {isHomePage ? (
                <>
                    <a href="#about" class={baseClasses}>
                        About
                    </a>
                    <a href="#experience" class={baseClasses}>
                        Experience
                    </a>
                    <a href="#projects" class={baseClasses}>
                        Projects
                    </a>
                    <a href="#blog" class={baseClasses}>
                        Blog
                    </a>
                    <a href="#contact" class={baseClasses}>
                        Contact
                    </a>
                </>
            ) : (
                <>
                    <a href="/" class={baseClasses}>
                        Home
                    </a>
                    <a href="/projects" class={baseClasses}>
                        Projects
                    </a>
                    <a href="/blog" class={baseClasses}>
                        Blog
                    </a>
                </>
            )}
        </nav>
    ) : (
        <nav class={containerClasses}>
            {isHomePage ? (
                <>
                    <a href="#about" class={baseClasses}>
                        About
                    </a>
                    <a href="#experience" class={baseClasses}>
                        Experience
                    </a>
                    <a href="#projects" class={baseClasses}>
                        Projects
                    </a>
                    <a href="#blog" class={baseClasses}>
                        Blog
                    </a>
                    <a href="#contact" class={baseClasses}>
                        Contact
                    </a>
                </>
            ) : (
                <>
                    <a href="/" class={baseClasses}>
                        Home
                    </a>
                    <a href="/projects" class={baseClasses}>
                        Projects
                    </a>
                    <a href="/blog" class={baseClasses}>
                        Blog
                    </a>
                </>
            )}
        </nav>
    )
}
