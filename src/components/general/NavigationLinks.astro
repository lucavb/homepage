---
interface Props {
    isHomePage?: boolean;
    variant?: 'desktop' | 'mobile';
    class?: string;
}

const { isHomePage = true, variant = 'desktop', class: className = '' } = Astro.props;

const baseClasses =
    variant === 'desktop'
        ? 'px-3 py-1.5 rounded-full text-sm font-medium text-slate-600 dark:text-slate-300 hover:text-violet-600 dark:hover:text-violet-400 hover:bg-white/20 dark:hover:bg-white/10 transition-all'
        : 'mobile-nav-link block px-4 py-3 text-slate-600 dark:text-slate-300 hover:text-violet-600 dark:hover:text-violet-400 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-lg transition-colors';

const containerClasses =
    variant === 'desktop' ? `hidden md:flex gap-1 ${className}` : `flex-1 px-4 py-6 space-y-4 ${className}`;
---

{
    variant === 'desktop' ? (
        <nav class={containerClasses} aria-label="Main navigation">
            {isHomePage ? (
                <>
                    <a href="#about" class={baseClasses}>
                        About
                    </a>
                    <a href="#experience" class={baseClasses}>
                        Experience
                    </a>
                    <a href="#projects" class={baseClasses}>
                        Projects
                    </a>
                    <a href="#blog" class={baseClasses}>
                        Blog
                    </a>
                    <a href="#contact" class={baseClasses}>
                        Contact
                    </a>
                </>
            ) : (
                <>
                    <a href="/" class={baseClasses}>
                        Home
                    </a>
                    <a href="/projects" class={baseClasses}>
                        Projects
                    </a>
                    <a href="/blog" class={baseClasses}>
                        Blog
                    </a>
                </>
            )}
        </nav>
    ) : (
        <nav class={containerClasses} aria-label="Main navigation">
            {isHomePage ? (
                <>
                    <a href="#about" class={baseClasses}>
                        About
                    </a>
                    <a href="#experience" class={baseClasses}>
                        Experience
                    </a>
                    <a href="#projects" class={baseClasses}>
                        Projects
                    </a>
                    <a href="#blog" class={baseClasses}>
                        Blog
                    </a>
                    <a href="#contact" class={baseClasses}>
                        Contact
                    </a>
                </>
            ) : (
                <>
                    <a href="/" class={baseClasses}>
                        Home
                    </a>
                    <a href="/projects" class={baseClasses}>
                        Projects
                    </a>
                    <a href="/blog" class={baseClasses}>
                        Blog
                    </a>
                </>
            )}
        </nav>
    )
}
