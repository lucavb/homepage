---
import { info } from '@data';
import GitHubIcon from '@components/icons/GitHubIcon.astro';
import LinkedInIcon from '@components/icons/LinkedInIcon.astro';
import MatrixIcon from '@components/icons/MatrixIcon.astro';
import EmailIcon from '@components/icons/EmailIcon.astro';

interface Props {
    size?: 'sm' | 'md' | 'lg';
    emailId?: string;
    class?: string;
}

const { size = 'md', emailId = 'social-email-link', class: className = '' } = Astro.props;

const sizeClasses = {
    sm: 'w-4 h-4',
    md: 'w-5 h-5',
    lg: 'w-6 h-6',
};

const iconSize = sizeClasses[size];
---

<div class={`flex items-center space-x-4 ${className}`}>
    <a
        href={info.socialMedia.github}
        target="_blank"
        rel="noopener noreferrer"
        class="p-2 text-slate-600 dark:text-slate-300 hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
        aria-label="GitHub"
    >
        <GitHubIcon class={iconSize} />
    </a>
    <a
        href={info.socialMedia.linkedin}
        target="_blank"
        rel="noopener noreferrer"
        class="p-2 text-slate-600 dark:text-slate-300 hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
        aria-label="LinkedIn"
    >
        <LinkedInIcon class={iconSize} />
    </a>
    <a
        href={info.socialMedia.matrix}
        target="_blank"
        rel="noopener noreferrer"
        class="p-2 text-slate-600 dark:text-slate-300 hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
        aria-label="Matrix"
    >
        <MatrixIcon class={iconSize} />
    </a>
    <a
        id={emailId}
        href="#"
        class="p-2 text-slate-600 dark:text-slate-300 hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
        aria-label="Email"
    >
        <EmailIcon class={iconSize} />
    </a>
</div>
