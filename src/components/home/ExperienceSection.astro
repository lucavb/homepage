---
import { info } from '@data';
import SectionTitle from '@components/general/SectionTitle.astro';
---

<!-- Experience Section -->
<section id="experience" class="py-20 bg-slate-50 dark:bg-slate-900/50 relative overflow-hidden">
    <div
        class="absolute -top-20 -right-20 w-96 h-96 bg-violet-500/5 dark:bg-violet-400/5 rounded-full blur-3xl pointer-events-none"
    >
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SectionTitle title="Professional Experience" />
        <div class="space-y-6">
            {
                info.experience.map((exp, index) => (
                    <div
                        class="bg-white dark:bg-slate-800/80 rounded-2xl border-l-4 border-l-violet-500 border border-slate-200/60 dark:border-slate-700/50 p-6 hover:shadow-lg transition-shadow duration-300"
                        data-animate
                        style={`transition-delay: ${index * 100}ms`}
                    >
                        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-3">
                            <h3 class="text-lg font-bold text-slate-900 dark:text-white">{exp.name}</h3>
                            <span class="text-sm font-mono text-slate-500 dark:text-slate-400">
                                {exp.startDate} â€” {exp.endDate}
                            </span>
                        </div>
                        <p class="text-sm text-slate-500 dark:text-slate-400 mb-4">{exp.location}</p>
                        <div class="text-slate-600 dark:text-slate-300 mb-4 space-y-1.5">
                            {exp.description.map((desc) => desc.trim() && <p class="text-sm">{desc}</p>)}
                        </div>
                        {exp.skills && exp.skills.length > 0 && (
                            <div class="flex flex-wrap gap-2">
                                {exp.skills.map((skill) => (
                                    <span class="px-2.5 py-0.5 text-xs font-mono border border-slate-200 dark:border-slate-600 text-slate-600 dark:text-slate-400 rounded-md">
                                        {skill}
                                    </span>
                                ))}
                            </div>
                        )}
                    </div>
                ))
            }
        </div>
    </div>
</section>
