---
import { info } from '@data';
import SectionTitle from '@components/general/SectionTitle.astro';
---

<!-- Experience Section -->
<section id="experience" class="py-20 bg-gradient-to-tl from-sky-100 to-indigo-200 dark:from-gray-900 dark:to-blue-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SectionTitle title="Professional Experience" />
        <div class="relative">
            <div
                class="absolute left-4 md:left-1/2 transform md:-translate-x-0.5 h-full w-0.5 bg-blue-200 dark:bg-blue-800"
            >
            </div>
            <div class="space-y-12">
                {
                    info.experience.map((exp, index) => (
                        <div
                            class={`relative flex items-start ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}
                        >
                            <div class="absolute left-4 md:left-1/2 transform md:-translate-x-1/2 w-4 h-4 bg-blue-600 dark:bg-blue-400 rounded-full border-4 border-white dark:border-gray-800 shadow-lg z-10" />
                            <div class={`ml-12 md:ml-0 md:w-1/2 ${index % 2 === 0 ? 'md:pr-12' : 'md:pl-12'}`}>
                                <div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow border dark:border-gray-700">
                                    <div class="text-blue-600 dark:text-blue-400 font-semibold text-sm mb-2">
                                        {exp.startDate} - {exp.endDate}
                                    </div>
                                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">{exp.name}</h3>
                                    <h4 class="text-lg font-semibold text-blue-600 dark:text-blue-400 mb-3">
                                        {exp.location}
                                    </h4>
                                    <div class="text-gray-600 dark:text-gray-300 mb-4 space-y-2">
                                        {exp.description.map((desc) => desc.trim() && <p class="text-sm">{desc}</p>)}
                                    </div>
                                    {exp.skills && exp.skills.length > 0 && (
                                        <div class="flex flex-wrap gap-2">
                                            {exp.skills.map((skill) => (
                                                <span class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-3 py-1 rounded-full text-sm font-medium">
                                                    {skill}
                                                </span>
                                            ))}
                                        </div>
                                    )}
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
