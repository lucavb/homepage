---
import { info } from '@data';
import GitHubIcon from '@components/icons/GitHubIcon.astro';
import LinkedInIcon from '@components/icons/LinkedInIcon.astro';
import MatrixIcon from '@components/icons/MatrixIcon.astro';
import EmailIcon from '@components/icons/EmailIcon.astro';
---

<!-- Footer -->
<footer class="bg-white dark:bg-slate-900 border-t border-slate-200 dark:border-slate-800 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center">
            <p class="text-slate-600 dark:text-slate-300 mb-4 md:mb-0">
                Â© {new Date().getFullYear()}
                {info.name}. All rights reserved. Built with Astro and Tailwind CSS.
                <a
                    href="/impressum"
                    class="underline hover:text-violet-600 dark:hover:text-violet-400 transition-colors ml-2"
                >
                    Impressum
                </a>
            </p>
            <nav aria-label="Social links" class="flex space-x-6">
                <a
                    href={info.socialMedia.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-slate-600 dark:text-slate-300 hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
                    aria-label="GitHub"
                >
                    <GitHubIcon class="w-5 h-5" />
                </a>
                <a
                    href={info.socialMedia.linkedin}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-slate-600 dark:text-slate-300 hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
                    aria-label="LinkedIn"
                >
                    <LinkedInIcon class="w-5 h-5" />
                </a>
                <a
                    href={info.socialMedia.matrix}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-slate-600 dark:text-slate-300 hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
                    aria-label="Matrix"
                >
                    <MatrixIcon class="w-5 h-5" />
                </a>
                <a
                    id="footer-email-link"
                    href="#"
                    class="text-slate-600 dark:text-slate-300 hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
                    aria-label="Email"
                >
                    <EmailIcon class="w-5 h-5" />
                </a>
            </nav>
        </div>
    </div>
</footer>

<script>
    import { initEmailProtection } from '@utils';

    initEmailProtection([
        {
            elementId: 'footer-email-link',
            options: { autoReveal: false, isDisplayElement: false },
        },
    ]);
</script>
