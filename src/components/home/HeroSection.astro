---
import { info } from '@data';
---

<!-- Hero Section -->
<section
    class="pt-32 pb-20 bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-blue-900 min-h-screen flex items-center relative overflow-hidden"
>
    <!-- Floating decoration elements -->
    <div class="absolute top-20 left-10 w-20 h-20 bg-blue-200 dark:bg-blue-800 rounded-full opacity-20 parallax-element" data-intensity="0.3"></div>
    <div class="absolute bottom-32 right-16 w-16 h-16 bg-indigo-200 dark:bg-indigo-800 rounded-full opacity-30 parallax-element" data-intensity="0.2"></div>
    <div class="absolute top-1/3 right-20 w-12 h-12 bg-purple-200 dark:bg-purple-800 rounded-full opacity-25 parallax-element" data-intensity="0.4"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <div class="mb-8 parallax-element" data-intensity="0.1">
            <div
                class="w-32 h-32 mx-auto mb-6 overflow-hidden rounded-full border-4 border-white dark:border-gray-300 shadow-lg hover:shadow-2xl transition-shadow duration-300"
            >
                <picture>
                    <source
                        srcset="/assets/images/hero/120.avif 1x, /assets/images/hero/240.avif 2x"
                        type="image/avif"
                    />
                    <source
                        srcset="/assets/images/hero/120.webp 1x, /assets/images/hero/240.webp 2x"
                        type="image/webp"
                    />
                    <img
                        src="/assets/images/hero/120.jpg"
                        srcset="/assets/images/hero/120.jpg 1x, /assets/images/hero/240.jpg 2x"
                        alt={info.name}
                        class="w-full h-full object-cover transition-transform duration-300 hover:scale-110"
                        width="120"
                        height="120"
                        loading="eager"
                    />
                </picture>
            </div>
        </div>
        <h1 class="text-5xl md:text-7xl font-bold text-gray-900 dark:text-white mb-6 parallax-fade parallax-element" data-intensity="0.05">
            {info.name}
        </h1>
        <h2
            class="text-2xl md:text-3xl text-blue-600 dark:text-blue-400 font-semibold mb-8 parallax-fade parallax-element"
            data-intensity="0.08"
            style="animation-delay: 0.2s"
        >
            {info.jobDescription}
        </h2>
        <p
            class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto leading-relaxed parallax-fade mb-12 parallax-element"
            data-intensity="0.06"
            style="animation-delay: 0.4s"
        >
            {info.about.split('\n')[0]}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center parallax-fade parallax-element" data-intensity="0.04" style="animation-delay: 0.6s">
            <a
                href="#projects"
                class="bg-gradient-to-br from-blue-600 to-indigo-700 text-white px-8 py-4 rounded-lg font-semibold hover:from-blue-700 hover:to-indigo-800 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1 hover:scale-105"
                onclick="_paq && _paq.push(['trackEvent', 'CTA', 'View My Work', 'Hero Section']);"
            >
                View My Work
            </a>
            <a
                href="#contact"
                class="border-2 border-blue-600 dark:border-blue-400 text-blue-600 dark:text-blue-400 px-8 py-4 rounded-lg font-semibold hover:bg-blue-600 hover:text-white dark:hover:bg-blue-400 dark:hover:text-white transition-all duration-300 hover:scale-105"
                onclick="_paq && _paq.push(['trackEvent', 'CTA', 'Get In Touch', 'Hero Section']);"
            >
                Get In Touch
            </a>
        </div>
    </div>
</section>
