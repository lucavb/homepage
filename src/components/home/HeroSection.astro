---
import { info } from '@data';
---

<!-- Hero Section -->
<section
    class="pt-32 pb-20 bg-gradient-to-br from-sky-100 to-indigo-200 dark:from-gray-900 dark:to-blue-900 min-h-screen flex items-center"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="mb-8">
            <div
                class="w-52 h-52 mx-auto mb-6 overflow-hidden rounded-full border-4 border-white dark:border-gray-300 shadow-lg"
            >
                <picture>
                    <source
                        srcset="/assets/images/hero/400.avif 1x, /assets/images/hero/800.avif 2x"
                        type="image/avif"
                    />
                    <source
                        srcset="/assets/images/hero/400.webp 1x, /assets/images/hero/800.webp 2x"
                        type="image/webp"
                    />
                    <img
                        src="/assets/images/hero/400.jpg"
                        srcset="/assets/images/hero/400.jpg 1x, /assets/images/hero/800.jpg 2x"
                        alt={info.name}
                        class="w-full h-full object-cover"
                        width="400"
                        height="400"
                        loading="eager"
                    />
                </picture>
            </div>
        </div>
        <h1 class="text-5xl md:text-7xl font-bold text-gray-900 dark:text-white mb-6 animate-fade-in">
            {info.name}
        </h1>
        <h2
            class="text-2xl md:text-3xl text-blue-600 dark:text-blue-400 font-semibold mb-8 animate-fade-in"
            style="animation-delay: 0.2s"
        >
            {info.jobDescription}
        </h2>
        <p
            class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto leading-relaxed animate-fade-in mb-12"
            style="animation-delay: 0.4s"
        >
            {info.about.split('\n')[0]}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in" style="animation-delay: 0.6s">
            <a
                href="#projects"
                class="bg-gradient-to-br from-blue-600 to-indigo-700 text-white px-8 py-4 rounded-lg font-semibold hover:from-blue-700 hover:to-indigo-800 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
                onclick="_paq && _paq.push(['trackEvent', 'CTA', 'View My Work', 'Hero Section']);"
            >
                View My Work
            </a>
            <a
                href="#contact"
                class="border-2 border-blue-600 dark:border-blue-400 text-blue-600 dark:text-blue-400 px-8 py-4 rounded-lg font-semibold hover:bg-blue-600 hover:text-white dark:hover:bg-blue-400 dark:hover:text-white transition-colors"
                onclick="_paq && _paq.push(['trackEvent', 'CTA', 'Let\'s Connect', 'Hero Section']);"
            >
                Let's Connect
            </a>
        </div>
    </div>
</section>
