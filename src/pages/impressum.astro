                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>

        <Footer />
    </div>

    <script>
        import { initEmailProtection } from '@utils';

        // Phone number protection (keeping existing logic since it's unique)
        const phoneData = 'KzQ5IDE1MSA2MTg2NzQ5OA=='; // Base64 encoded phone

        document.getElementById('phone-number').addEventListener('click', function () {
            const decoded = atob(phoneData);
            this.textContent = decoded;
            this.style.cursor = 'default';
            this.title = 'Phone number';
        });

        initEmailProtection([
            {
                elementId: 'email-link',
                options: { autoReveal: true, isDisplayElement: true },
            },
        ]);

        // Auto-reveal phone number after user interaction
        let hasInteracted = false;
        function revealOnInteraction() {
            if (!hasInteracted) {
                hasInteracted = true;
                document.getElementById('phone-number').click();
            }
        }

        // Listen for user interaction
        document.addEventListener('scroll', revealOnInteraction);
        document.addEventListener('click', revealOnInteraction);
    </script>
</Layout>
